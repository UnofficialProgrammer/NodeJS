<section>
    <div class="container">
        <div class="row mt-4">
            <div class="col-md-3">
                <p>
                  <a href="/admin/add-product/" class="btn btn-success" style="margin-left: auto;">Add Products</a>
                </p>
            </div>
        </div>

        {{#if updateMessage}}
            <div class="alert alert-success mt-2" role="alert">{{updateMessage}}</div>
        {{/if}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Description}}</td>
                    <td><img src='./product-images/{{this._id}}.jpg' width="80px;" height="80px;"></td>
                    <td>
                        <a href="admin/editProduct/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="admin/deleteProduct/{{this._id}}" class="btn btn-danger" onclick="return confirm('Sure you want to delete {{this.Name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>